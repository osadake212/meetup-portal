<div class="row">
  <div class="col-lg-offset-3 col-lg-6">
    <h1>Sign in</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-offset-3 col-lg-6">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <div class="col-lg-5">
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-offset-3 col-lg-6">
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
