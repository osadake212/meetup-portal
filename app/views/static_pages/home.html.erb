<div class="row">
  <div class="col-lg-12">
    <div class="panel-main">
      <h1>Welcome to the Portal</h1>
      <h2>This is the Portal for Grate Meetups!</h2>
      <% unless signed_in? %>
        <%= link_to "Sign up!", '/signup', class: "btn btn-lg btn-primary"%>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="panel-meetup">
      <p>Latest Meetups</p>
      <hr/>
      <% if @meetups.to_a.empty? %>
        No meetups.
      <% else %>
        <% @meetups.each do |meetup| %>
          <%= render 'meetups/short_meetup', meetup: meetup%>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="panel-micropost">
      <p>Latest Posts</p>
      <hr/>
      <% if @microposts.to_a.empty? %>
        No posts.
      <% else %>
        <% @microposts.each do |micropost| %>
         <%= render 'microposts/micropost', micropost: micropost%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
