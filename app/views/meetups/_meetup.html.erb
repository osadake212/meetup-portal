<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= link_to meetup.title, meetup %></dd>

  <dt>Short Desctiption</dt>
  <dd><%= meetup.short_description %></dd>

  <dt>Description</dt>
  <dd><%= markdown meetup.description %></dd>

  <dt>Start Date</dt>
  <dd><%= date_str_jp(meetup.start_date) %></dd>

  <dt>End Date</dt>
  <dd><%= date_str_jp(meetup.end_date) %></dd>

  <% if current_user?(meetup.user) %>
    <dd><%= link_to "edit", edit_meetup_path(meetup) %> | <%= link_to "delete", meetup, method: :delete, data: { confirm: "You sure?" } %></dd>
  <% end %>
</dl>
