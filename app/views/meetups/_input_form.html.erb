<%= form_for(@meetup) do |f| %>

  <div class="row">
    <div class="col-lg-offset-2 col-lg-8">
      <%= f.label :title, class: "fill-width" %>
      <%= f.text_field :title, class: "fill-width" %>

      <%= f.label :description, class: "fill-width" %>
      <%= f.text_area :description, class: "fill-width" %>

      <%= f.label :format, class: "fill-width" %>
      <%= f.text_field :format, class: "fill-width" %>

      <%= f.label :date, class: "fill-width" %>
      <%= f.date_select :date, class: "fill-width" %>

      <%= f.label :start_time, class: "fill-width" %>
      <%= f.time_select :start_time, class: "fill-width" %>

      <%= f.label :end_time, class: "fill-width" %>
      <%= f.time_select :end_time, class: "fill-width" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-offset-2">
      <%= f.submit button_label, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
