<div class="row">
  <div class="col-lg-offset-2 col-lg-8">
    <%= form_for(@meetup) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :format %>
      <%= f.text_field :format %>

      <%= f.label :date %>
      <%= f.date_select :date %>

      <%= f.label :start_time %>
      <%= f.time_select :start_time %>

      <%= f.label :end_time %>
      <%= f.time_select :end_time %>

      <div class="row">
        <div class="col-lg-5">
          <%= f.submit button_label, class: "btn btn-lg btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
